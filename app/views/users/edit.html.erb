<div class="container">
  <div class="row">
    <div class="mx-auto col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0">
       <h1>User info</h1>
       <% if @user.errors.any? %>
         <%= @user.errors.count %>errors prohibited this obj from being saved:
         <% @user.errors.full_messages.each do |message| %>
         <%= message %>
         <% end %>
       <% end %>
       <%= form_with model: @user, local: true do |f| %>
        <h6>name</h6>
         <div class="form-group">
           <%= f.text_field :name, class: "form-control" %>
         </div>
  
        <h6>image</h6>
         <div class="form-group">
          <%= f.attachment_field :profile_image, class: "form-control-file" %>
         </div>
        <h6>introduction</h6>
         <div class="form-group">
          <%= f.text_area :introduction, class: "form-control" %>
         </div>
         <div class="form-group">
           <%= f.submit 'Update User' ,class: "btn btn-secondary" %>
        </div>
  <% end %>
    </div>
  </div>
</div>
